<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:minHeight="56dp"
    android:layout_margin="14dp">

    <LinearLayout
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/adapter_ivImage"
            android:src="@drawable/ic_action_android"
            android:layout_margin="16dp"
            android:layout_weight="0.7"
            android:layout_width="56dp"
            android:layout_height="56dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/adapter_tvAppName"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="14sp"
            android:layout_weight="1"
            android:id="@+id/adapter_tvDeveloperName"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:textAllCaps="true"
            android:textColor="@color/colorStatus"
            android:gravity="right"
            android:textSize="18sp"
            android:layout_weight="1"
            android:id="@+id/adapter_tvAppStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>